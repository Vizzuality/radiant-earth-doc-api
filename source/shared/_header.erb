  <nav>
    <div class="c-mobile-menu__header">
      <%= image_tag('logo.svg') %>
      <div class="c-header__close-menu">
        <%= image_tag('close.svg') %>
      </div>
    </div>
     <ul style="display: block; outline: none;">
       <li class="text -ff2-s -white -selected -uppercase"><a href="#">API Documentation</a></li>
       <li class="text -ff2-s -white -uppercase"><a href="http://radiant-e.herokuapp.com/blog">Blog</a></li>
       <li class="text -ff2-s -white -uppercase"><a href="http://radiant-e.herokuapp.com/about">About</a></li>
     </ul>
  </nav>
