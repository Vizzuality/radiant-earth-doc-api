<% language_tabs = current_page.data.language_tabs %>
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "API Documentation" %></title>

    <%= stylesheet_link_tag :screen, media: :screen %>
    <%= stylesheet_link_tag :print, media: :print %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>

    <% if language_tabs %>
      <script>
        $(function() {
          setupLanguages(<%= language_tabs.map{ |lang| lang.is_a?(Hash) ? lang.keys.first : lang }.to_json %>);
        });
      </script>
    <% end %>
  </head>

  <body class="<%= page_classes %>">

  <div class="c-header">
     <div class="c-header__content row">
        <div class="small-3 columns">
           <a href="/">
             <%= image_tag('logo.svg') %>
           </a>
        </div>
        <div class="small-9 columns">
           <div class="c-nav">
              <ul>
                 <li class="text -ff2-s -white"><a href="#">Documentation</a></li>
                 <li class="text -ff2-s -white"><a href="#">Data explorer</a></li>
                 <li class="text -ff2-s -white"><a href="/blog">Blog</a></li>
                 <li class="text -ff2-s -white"><a href="/about">About</a></li>
              </ul>
           </div>
           <div class="c-burger-menu">
              <div>
                 <div class="bm-overlay"></div>
                 <div class="bm-menu-wrap">
                    <div class="bm-menu">
                       <nav class="bm-item-list">
                         <%= image_tag('logo.svg') %>
                          <ul style="display: block; outline: none;">
                             <li class="text -ff2-s -white"><a href="#">Documentation</a></li>
                             <li class="text -ff2-s -white"><a href="#">Data explorer</a></li>
                             <li class="text -ff2-s -white"><a href="/blog">Blog</a></li>
                             <li class="text -ff2-s -white"><a href="/about">About</a></li>
                          </ul>
                       </nav>
                    </div>
                    <div>
                       <div class="bm-cross-button" >
                         <span>
                           <span class="bm-cross">
                           </span>
                           <span class="bm-cross">
                           </span>
                         </span>
                         <button>Close Menu
                         </button>
                       </div>
                    </div>
                 </div>
                 <div class="bm-burger-button">
                   <span>
                     <span class="bm-burger-bars">
                     </span>
                     <span class="bm-burger-bars">
                     </span>
                     <span class="bm-burger-bars">
                     </span>
                   </span>
                   <button>Open Menu</button>
                 </div>
              </div>
           </div>
        </div>
     </div>
  </div>

    <div class="tocify-wrapper">
      <%= image_tag "logo.png" %>
      <% if language_tabs %>
        <div class="lang-selector">
          <% language_tabs.each do |lang| %>
            <% if lang.is_a? Hash %>
              <a href="#" data-language-name="<%= lang.keys.first %>"><%= lang.values.first %></a>
            <% else %>
              <a href="#" data-language-name="<%= lang %>"><%= lang %></a>
            <% end %>
          <% end %>
        </div>
      <% end %>
      <% if current_page.data.search %>
        <div class="search">
          <input type="text" class="search" id="input-search" placeholder="Search">
        </div>
        <ul class="search-results"></ul>
      <% end %>
      <div id="toc">
      </div>
      <% if current_page.data.toc_footers %>
        <ul class="toc-footer">
          <% current_page.data.toc_footers.each do |footer| %>
            <li><%= footer %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="page-wrapper">
      <div class="dark-box"></div>
      <div class="content">
        <%= yield %>
        <% current_page.data.includes && current_page.data.includes.each do |include| %>
          <%= partial "includes/#{include}" %>
        <% end %>
      </div>
      <div class="dark-box">
        <% if language_tabs %>
          <div class="lang-selector">
            <% language_tabs.each do |lang| %>
              <% if lang.is_a? Hash %>
                <a href="#" data-language-name="<%= lang.keys.first %>"><%= lang.values.first %></a>
              <% else %>
                <a href="#" data-language-name="<%= lang %>"><%= lang %></a>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="c-footer">
       <div class="row small-up-1 medium-up-10 large-up-10">
          <div class="c-footer__partners-funders-container small-10 columns">
             <span class="text -ff2-xs -white -uppercase -center">We are working with funders and partners to accelerate open earth imagery technologies</span>
             <div class="c-footer_logos-container">
                <div class="row align-spaced">
                   <a class="" href="https://www.omidyar.com/" target="_blank" rel="noopener noreferrer">
                     <%= image_tag('Omidyar.svg') %>
                   </a>
                   <a href="http://www.gatesfoundation.org/" target="_blank" rel="noopener noreferrer">
                     <%= image_tag('Bill&Melinda.svg') %>
                   </a>
                   <a href="http://www.vizzuality.com/" target="_blank" rel="noopener noreferrer">
                     <%= image_tag('Vizzuality.svg') %>
                   </a>
                   <a href="https://www.azavea.com/" target="_blank" rel="noopener noreferrer">
                     <%= image_tag('azavea.svg') %>
                   </a>
                </div>
             </div>
          </div>
       </div>
       <div class="row small-up-1 medium-up-2 large-up-2">
          <div class="c-footer__newsletter-container small-6 columns align-self-middle">
             <span class="text -ff2-xs -white -uppercase -center">Subscribe to our newsletter to get latest news and updates</span>
             <form class="c-footer__newsletter-form">
                <%= image_tag('arrow.svg') %>
                <input type="email" class="text -ff2-s -uppercase" value="youremail@domain.com">
             </form>
          </div>
       </div>
       <div class="row small-up-2 medium-up-2 large-up-3">
          <div class="c-footer__social-networks-container small-4 columns align-self-middle">
             <div class="row align-justify">
                <a href="https://twitter.com/ourradiantearth" target="_blank" rel="noopener noreferrer">
                  <%= image_tag('twitter.svg') %>
                </a>
                <a href="https://www.linkedin.com/company-beta/11020837/" target="_blank" rel="noopener noreferrer">
                  <%= image_tag('linkedin.svg') %>
                </a>
                <a href="https://www.facebook.com/OurRadiantEarth" target="_blank" rel="noopener noreferrer">
                  <%= image_tag('facebook.svg') %>
                </a>
                <a href="https://medium.com/@ourradiantearth" target="_blank" rel="noopener noreferrer">
                  <%= image_tag('medium.svg') %>
                </a>
                <a href="https://www.instagram.com/OurRadiantEarth/" target="_blank" rel="noopener noreferrer">
                  <%= image_tag('instagram.svg') %>
                </a>
             </div>
             <span class="text -ff2-xs -white -center">Copyright Â© 2017 Radiant. All Rights Reserved.</span>
          </div>
       </div>
    </div>


  </body>
</html>
